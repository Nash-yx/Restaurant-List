<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 col-lg-4 mx-auto">
      <div class="card shadow-sm">
        <div class="card-header bg-light py-2">
          <h3 class="card-title text-center mb-0">Login</h3>
        </div>
        <div class="card-body py-4">
          <form action="/login" method="POST">
            <div class="mb-3">
              <label for="email" class="form-label">Email (登入帳號)</label>
              <input type="email" id="email" name="email" class="form-control" required>
            </div>
            <div class="mb-4">
              <label for="password" class="form-label">密碼</label>
              <input type="password" id="password" name="password" class="form-control" required>
            </div>
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-success">
                <i class="fas fa-sign-in-alt me-2"></i>登入
              </button>
              <a href="/auth/facebook" class="btn btn-primary">
                <i class="fab fa-facebook-f me-2"></i>以 Facebook 登入
              </a>
            </div>
          </form>
        </div>
        <div class="card-footer bg-light py-3">
          <div class="d-flex justify-content-end align-items-center">
            <span class="me-2">No accounts?</span>
            <a href="/register" class="text-decoration-none">Register</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<footer class="footer mt-5 py-3 bg-light">
  <div class="container text-center">
    <span class="text-muted">© 2025 我的餐廳清單. All rights reserved.</span>
  </div>
</footer>

<!-- 動態插入導航按鈕 -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // 找到導航欄容器
    const navbarContainer = document.querySelector('nav .container');
    if (navbarContainer) {
      // 創建按鈕容器並設定為靠右對齊
      const buttonsContainer = document.createElement('div');
      buttonsContainer.className = 'ms-auto'; // 使用 ms-auto 來靠右對齊
      
      // 創建登入按鈕
      const loginBtn = document.createElement('a');
      loginBtn.href = '/login';
      loginBtn.className = 'btn btn-success me-2';
      loginBtn.textContent = '登入';
      
      // 創建註冊按鈕
      const registerBtn = document.createElement('a');
      registerBtn.href = '/register';
      registerBtn.className = 'btn btn-primary';
      registerBtn.textContent = '註冊新帳號';
      
      // 將按鈕添加到容器
      buttonsContainer.appendChild(loginBtn);
      buttonsContainer.appendChild(registerBtn);
      
      // 將按鈕容器添加到導航欄
      navbarContainer.appendChild(buttonsContainer);
    }
  });
</script>